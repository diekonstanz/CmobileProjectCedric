    </EmbeddedResource>
    <EmbeddedResource Update="Views\AddCrystalPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\EditCrystalPage.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
